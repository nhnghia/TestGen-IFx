process OBU(N_TRAINS);
var m MovementAuthority;
var v Speed;
var c clock;
var h clock;
var l Location;
var rbc pid;
 /* the initial state of the train; the train in this state is not controlled by the RBC */
state init #start ;
	input ESpeed(v);
		set c := 0;
		set h := 0;
		nextstate q1;
endstate;
state q1;
	when h=1;
	input ELocation(l);
//		fork RBC(self);
		rbc := fork RBC(self);
		output MARequest(l) to rbc;
		nextstate q2;
endstate;

state q2 ;
	when h > 2;
	input MA(m);
		nextstate NORMAL;
endstate;

state NORMAL #unstable ;
	provided v > m.speed;		/*3.13.10.5.4 t2 */
		output EBcmd(1);
		output DMIcmd(m.speed);
		
		nextstate INTERVENTION;
	provided v <= m.speed;		/*3.13.10.5.4 t1 */
		output EBcmd(0);
		output DMIcmd(m.speed);
		
		nextstate INDICATION;
endstate;

state INDICATION ;
	provided v > m.speed;		/*3.13.10.5.4 t2 */
		output EBcmd(1);
		output DMIcmd(m.speed);
		
		nextstate INTERVENTION;
		
	input MA(m);
		nextstate -;
	input ESpeed(v);
		nextstate -;
	input ELocation(l);
		nextstate -;
	
	deadline lazy;
	when c > 60;
		reset c;
		output MARequest(l);
		nextstate -;
endstate;


state INTERVENTION;
	provided v = 0;				  /*3.13.10.5.4 ro: standstill*/
		output EBcmd(0);
		output DMIcmd(m.speed);
		nextstate INDICATION;
	provided v > 0;
	input ESpeed(v);
		nextstate -;	
endstate;
/*
state SERVICE_BREAK;
	nextstate EMERG_BREAK;
endstate;
state EMERG_BREAK;
endstate;
*/
endprocess;


process RBC(N_RBCS);
	fpar obu pid;
	
procedure getReleaseSpeed;
	fpar d Distance;
	returns Speed;
   {#
     return rand() % d;
   #}
endprocedure;


var m MovementAuthority;
var x Location;
var v Speed;
var y Location;
var d Distance;
var c clock;

state init #start ;
	input DLocation(x);
	nextstate IDLE;
endstate;

state IDLE ;
	deadline lazy;
	input MARequest(y);
		nextstate MA;
	input DLocation(x);
		nextstate IDLE;
	when c >= 60;
		nextstate MA;
endstate;

state MA #unstable ;
		task m.distance := x-y;
		m.speed := call getReleaseSpeed(x-y);
		output MA(m) to obu;
		reset c;
		nextstate IDLE;
endstate;
endprocess;

endsystem;